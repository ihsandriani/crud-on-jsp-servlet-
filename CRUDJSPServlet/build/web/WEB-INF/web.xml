<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Product_Create</servlet-name>
        <servlet-class>servlet.Product_Create</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Product_Store</servlet-name>
        <servlet-class>servlet.Product_Store</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Product_Edit</servlet-name>
        <servlet-class>servlet.Product_Edit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Product_Update</servlet-name>
        <servlet-class>servlet.Product_Update</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Product_Destroy</servlet-name>
        <servlet-class>servlet.Product_Destroy</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Product_Create</servlet-name>
        <url-pattern>/Product_Create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Product_Store</servlet-name>
        <url-pattern>/Product_Store</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Product_Edit</servlet-name>
        <url-pattern>/Product_Edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Product_Update</servlet-name>
        <url-pattern>/Product_Update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Product_Destroy</servlet-name>
        <url-pattern>/Product_Destroy</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
